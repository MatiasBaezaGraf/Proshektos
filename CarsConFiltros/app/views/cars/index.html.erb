<p id="notice"><%= notice %></p>

<h1>Cars</h1>

Brand filter > 

<% Brand.all.each_with_index do | b, index | %>
  <%= link_to b.name, cars_path(:brand_id => b.id) %>
  <% if (index + 1) != Brand.all.count %>
    |
  <% end -%>
<% end -%>

<br/>
<br/>

Classification filter >

<% Classification.all.each_with_index do | c, index | %>
  <%= link_to c.name, cars_path(:classification_id => c.id) %>
  <% if (index + 1) != Classification.all.count %>
    |
  <% end -%>
<% end -%>

<br/>
<br/>

Structure filter >

<% Structure.all.each_with_index do | s, index | %>
  <%= link_to s.name, cars_path(:structure_id => s.id) %>
  <% if (index + 1) != Structure.all.count %>
    |
  <% end -%>
<% end -%>

<br/>
<br/>

<table>
  <thead>
    <tr>
      <th>Nro. Puertas</th>
      <th>Color</th>
      <th>Modelo</th>
      <th>Año</th>
      <th>Marca</th>
      <th>Clasificación</th>
      <th>Estructura</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.doors %></td>
        <td><%= car.color %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.brand.name unless car.brand.nil? %></td>
        <td><%= car.classification.name unless car.classification.nil? %></td>
        <td><%= car.structure.name unless car.structure.nil? %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

