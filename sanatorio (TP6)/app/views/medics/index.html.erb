<h3><strong><%= link_to "Back", home_index_path %></strong></h3>

<h1>Medics</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Speciality </th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% @medics.each do |medic| %>
      <tr>
        <td><%= medic.name %></td>
        <td><%= medic.speciality.name %></td>
        <td><%= link_to 'Show', medic %></td>
        <td><%= link_to 'Edit', edit_medic_path(medic) %></td>
        <td><%= link_to 'Destroy', medic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to 'New Medic', new_medic_path %></h2>
