<p id="notice"><%= notice %></p>

<h1>Loads</h1>

<table>
  <thead>
    <tr>
      <th>Liters</th>
      <th>Date</th>
      <th>Liter amount</th>
      <th>Truck description</th>
      <th>Truck patent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <tr>
        <td><%= load.liters %></td>
        <td><%= load.date %></td>
        <td><%= load.liter_amount %></td>
        <td><%= load.truck.description unless load.truck.nil? %></td>
        <td><%= load.truck.patent unless load.truck.nil? %></td>
        <td><%= link_to 'Show', load %></td>
        <td><%= link_to 'Edit', edit_load_path(load) %></td>
        <td><%= link_to 'Destroy', load, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

