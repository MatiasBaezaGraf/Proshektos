<p id="notice"><%= notice %></p>

<form action="/cars" method="GET">
  Brand: <input type="text" name="brand" value="<%= @brand %>"/>
  <input type="submit" />
</form>

<form action="/cars" method="GET">
  Model: <input type="text" name="model" value="<%= @model %>"/>
  <input type="submit" />
</form>

 


<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Patent</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Fuel type</th>
      <th>Kilometers from last service</th>
      <th>Needs service?</th>
      <th>Price per day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.patent %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.fuel_type %></td>
        <td><%= car.kilometers_last %></td>
        <td><%= car.need_s %></td>
        <td><%= car.price_day %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

