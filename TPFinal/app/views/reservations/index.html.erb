<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Car patent</th>
      <th>Car brand</th>
      <th>Car model</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.from %></td>
        <td><%= reservation.to %></td>
        <td><%= reservation.car.patent %></td>
        <td><%= reservation.car.brand %></td>
        <td><%= reservation.car.model %></td>
        <td><%= reservation.price %></td>
        <td><%= link_to 'Show', reservation if can? :show, Reservation%></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) if can? :edit, Reservation%></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Reservation%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
