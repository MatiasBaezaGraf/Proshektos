<p id="notice"><%= notice %></p>

<h1>Fuels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fuels.each do |fuel| %>
      <tr>
        <td><%= fuel.name %></td>
        <td><%= link_to 'Show', fuel if can? :show, Fuel%></td>
        <td><%= link_to 'Edit', edit_fuel_path(fuel) if can? :edit, Fuel%></td>
        <td><%= link_to 'Destroy', fuel, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Fuel%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fuel', new_fuel_path %>
