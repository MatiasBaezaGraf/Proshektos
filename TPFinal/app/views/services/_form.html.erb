<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Service_date %>
    <%= form.date_select :from %>
  </div>

  <div class="field">
    <%= form.label :car_id %>
    <%= form.collection_select(:car_id, @cars, :id, :patent) %>
  </div>

  <div class="field">
    <p class = "advise">Note: Every car has an integrated kilometer counter which is restarted after service. This field refers to kilometers in the moment of the service. If you are scheduling a service in the future, set this value to 0</p>
    <%= form.label :Kilometer_counter %>
    <%= form.number_field :kilometers %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
